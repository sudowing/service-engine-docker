{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "declaration": true,
        "declarationMap": false,
        "composite": true,
        "baseUrl": "./lib",
        "rootDir": "src",
        "outDir": "lib",
        "skipLibCheck": true,
        "lib": ["es2018", "es2019","es2020.promise"],
        "sourceMap": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["lib", "tests", "scripts"]
}
